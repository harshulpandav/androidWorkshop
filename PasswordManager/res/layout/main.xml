    android:weightSum="1" 
    android:padding="10dip"
    android:orientation="vertical">
    <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView1" android:text="Select account type" android:layout_width="fill_parent" android:layout_marginTop="7dip"></TextView>
    <Spinner android:layout_height="wrap_content" android:id="@+id/spinner1" android:layout_width="277dp"></Spinner>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout4" android:weightSum="1" android:baselineAligned="false" android:layout_height="69dp">
            <Button android:text="Add" android:layout_gravity="center" android:id="@+id/button1" android:layout_width="91dp" android:layout_height="wrap_content" android:layout_weight="0.72"></Button>
